{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ClientApp": "http://localhost:3000",
  "ReverseProxy": {
    "Routes": {
      "jobpostRead": {
        "ClusterId": "jobpost",
        "Match": {
          "Path": "/jobpost/{**catch-all}",
          "Methods": ["GET"]
        },
        "Transforms": [
          {
            "PathPattern": "api/jobpost/{**catch-all}"
          }
        ]
      },
      "jobpostWrite": {
        "ClusterId": "jobpost",
        "AuthorizationPolicy":  "default",
        "Match": {
          "Path": "/jobpost/{**catch-all}",
          "Methods": ["POST", "PUT", "DELETE"]
        },
        "Transforms": [
          {
            "PathPattern": "api/jobpost/{**catch-all}"
          }
        ]
      },
      "search": {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/{**catch-all}",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          {
            "PathPattern": "/api/search/{**catch-all}"
          }
        ]
      },
      "applyWrite": {
        "ClusterId": "apply",
        "AuthorizationPolicy":  "default",
        "Match": {
          "Path": "/apply",
          "Methods": [ "POST" ]
        },
        "Transforms": [
          {
            "PathPattern": "/api/apply"
          }
        ]
      },
      "applyRead": {
        "ClusterId": "apply",
        "AuthorizationPolicy":  "default",
        "Match": {
          "Path": "/apply/{**catch-all}",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          {
            "PathPattern": "/api/apply/{**catch-all}"
          }
        ]
      },
      "notification": {
        "ClusterId": "notifications",
        "CorsPolicy": "customPolicy",
        "Match": {
          "Path": "/notifications/{**catch-all}"
        }
      }
    }
  }
}
